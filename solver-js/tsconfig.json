{
    "include": [
        "src/index.ts",
        "./pkg/**/*",
    ],
    "exclude": [],
    "compilerOptions": {
        // Tells TypeScript to read JS files, as normally they are ignored as source files
        "allowJs": true,
        // Generate d.ts files
        "declaration": true,
        "outDir": "./dist",
        // Go to js file when using IDE functions like "Go to Definition" in VSCode
        "declarationMap": true,
        "lib": ["dom", "ES2015"],
        "module": "es2022",
        "moduleResolution": "node",
    }
}